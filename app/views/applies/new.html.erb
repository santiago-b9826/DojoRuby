<%= form_for(@applies) do |f| %>
    <div>
        <h1>Crear Nueva Solicitud</h1>
        <div>
            <%= f.text_field:title, placeholder:"Titulo"%>
        </div>
        <div>
            <%= f.text_area:body, placeholder:"Solicitud"%>
        </div>
        <div>
            <%= f.text_field:name, placeholder:"Nombre"%>
        </div>
        <div>
            <%= f.text_field:edad, placeholder:"Edad"%>
        </div>
        <div>
            <%= f.submit "Enviar"%>
        </div>
        
    </div>
<% end %>